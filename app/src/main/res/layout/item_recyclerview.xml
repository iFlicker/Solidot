<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="7dp"
    android:layout_marginRight="7dp"
    android:layout_marginTop="5dp"

    app:cardCornerRadius="2dp"
    app:elevation="1dp">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="@drawable/touch_bg"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:padding="5dp">

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="35dp">
            <TextView
                android:layout_width="260dp"
                android:layout_height="30dp"
                android:id="@+id/rvi_title"
                android:text="苹果要求所有应用到2016年底必须使用HTTPS"
                android:textStyle="bold"
                android:lines="1"
                android:ellipsize="end"
                android:textSize="20sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/rvi_author"
                android:gravity="bottom|right"
                android:lines="1"
                android:ellipsize="marquee"
                android:text="隔壁老王"
                android:textSize="12sp"
                />

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/rvi_content"
            android:text="测试内容测试内容测试内容测试内容测试内容测试内容测试内容测试内容测试内容测试内容测试内容测试内容测试内容测试内容测试内容测试内容测试内容测试内容测试内容测试内容测试内容测试内容测试内容测试内容测试内容测试内容测试内容测试内容测试内容测试内容测试内容测试内容测试内容测试内容测试内容"
            android:lines="3"
            android:ellipsize="end"
            android:textSize="15sp"
            />

    </LinearLayout>
</android.support.v7.widget.CardView>

